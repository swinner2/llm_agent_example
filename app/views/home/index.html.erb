<div class="container mx-auto px-4 py-8 max-w-4xl" data-controller="chat">
  <div class="bg-white rounded-lg shadow-lg p-6">
    <!-- Chat history container -->
    <div class="mb-4 h-[500px] overflow-y-auto border rounded-lg p-4" 
         data-chat-target="messageContainer">
      <!-- Messages will be added here dynamically -->
      <%= turbo_stream_from @chat, "messages" %>
      <div id="messages" class="space-y-4">
        <%= render @chat.messages %>
      </div>
    </div>

    <%= render "chats/messages/form", message: @chat.messages.new %>
  </div>
</div>

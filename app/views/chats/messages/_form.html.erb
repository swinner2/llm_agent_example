<%= form_with model: message, url: chat_messages_path(message.chat), class: "flex gap-2" do |form| %>
  <%= form.text_field :content, class: "flex-1 border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  <%= form.submit "Send", class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors" %>
<% end %>